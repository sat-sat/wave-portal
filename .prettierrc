{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": "*.js",
      "options": {
        "arrowParens": "avoid",
        "trailingComma": "none",
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true,
        "jsxBracketSameLine": false,
        "jsxSingleQuote": true
      }
    }
  ]
}
